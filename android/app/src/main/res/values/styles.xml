<resources>
    <style name="Theme.GRHDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/grh_primary</item>
        <item name="colorPrimaryVariant">@color/grh_primary_dark</item>
        <item name="colorSecondary">@color/grh_warning</item>
        <item name="android:colorBackground">@color/grh_background</item>
        <item name="android:textColorPrimary">@color/grh_text_primary</item>
        <item name="android:textColorSecondary">@color/grh_text_secondary</item>
    </style>

    <style name="TextAppearance.GRHDemo.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/grh_text_primary</item>
    </style>

    <style name="TextAppearance.GRHDemo.Subtitle" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/grh_text_secondary</item>
    </style>

    <style name="TextAppearance.GRHDemo.Section" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/grh_text_primary</item>
    </style>

    <style name="Widget.GRHDemo.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="Theme.GRHDemo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Widget.GRHDemo.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
</resources>